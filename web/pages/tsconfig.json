{
  "extends": "../tsconfig.web.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "paths": {
      "@": ["./src/"],
      "@components": ["./src/components"],
      "@components/*": ["./src/components/*"]
    }
  },
  "include": [
    "./src/*.ts",
    "./src/**/*.ts",
    "./src/*.vue",
    "./src/**/*.vue",
    "../../../h-ui/packages/*.ts",
    "../../../h-ui/packages/**/*.vue"
  ]
}
