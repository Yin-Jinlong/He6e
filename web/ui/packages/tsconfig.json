{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "declaration": false,
    "outDir": "../dist/@types",
    "skipLibCheck": true,
    "noEmit": false,
    "baseUrl": ".",
    "allowImportingTsExtensions": true
  },
  "include": [
    "./components/*.ts",
    "./**/*.vue"
  ],
  "exclude": [
    "./build"
  ]
}
