{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "rootDir": "./",
    "paths": {
      "@": ["./src/"],
    }
  },
  "include": ["src/*.ts", "src/**/*.ts", "src/*.vue","src/**/*.vue"],
  "references": [
    {
      "path": "../../tsconfig.base.json"
    }
  ]
}
