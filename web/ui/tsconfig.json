{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "declaration": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
  },
  "include": ["./packages/*.ts", "./packages/**/*.ts","./packages/**/*.vue"]
}
